---
const { tipo, tarifa, horario } = Astro.props;
---

<!-- Inicio Card -->
<div class="text-center p-5 border-x-2 border-y-2 border-green-200 rounded-sm mt-5 md:mt-0">
  <h3 class="text-amber-900 text-xl font-bold">{tipo}</h3>

  <p class="text-gray-600 font-medium p-1">
    Tarifa Minima: <span class="text-amber-700 font-semibold text-lg"
      >${tarifa}</span
    >
  </p>
  <p class="text-gray-600 font-medium p-1">
    Horario de Servicio: <span class="text-amber-700 font-semibold text-lg"
      >{horario}</span
    >
  </p>
</div>
<!-- Fin Card -->
